<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="@drawable/gradient_list"
    tools:context=".view.activity.splashExample.GradientScreen.GradientScreenActivity">

       <TextView
           android:id="@+id/tv_AndroidComponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Component"
           android:fontFamily="@font/milonga"
           android:textSize="@dimen/_20ssp"
           android:textColor="@android:color/white"
           android:layout_centerInParent="true"/>

       <TextView
           android:id="@+id/tv_Assets"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Assets"
           android:fontFamily="@font/baloo"
           android:textColor="@android:color/white"
           android:textSize="@dimen/_18ssp"
           android:layout_below="@+id/tv_AndroidComponent"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_centerInParent="true"
           />
</RelativeLayout>